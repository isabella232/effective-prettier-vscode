{
  "name": "effective-prettier-vscode",
  "displayName": "✪ Effective Prettier for VSCode - Code Formatter",
  "description": "✪ Effective Prettier for VSCode - Code Formatter",
  "version": "2.4.0",
  "publisher": "sebastian-software",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "galleryBanner": {
    "color": "#00596C",
    "theme": "dark"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=sebastian-software.effective-prettier-vscode",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-prettier-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/sebastian-software/effective-prettier-vscode/issues"
  },
  "engines": {
    "vscode": "^1.45.1"
  },
  "keywords": [
    "multi-root ready",
    "prettier",
    "formatter",
    "javascript",
    "js",
    "jsx",
    "flow",
    "typescript",
    "ts",
    "json",
    "css",
    "less",
    "scss",
    "styled-components",
    "styled-jsx",
    "markdown",
    "md",
    "commonmark",
    "mdx",
    "php",
    "pug",
    "ruby",
    "swift",
    "html",
    "vue",
    "angular",
    "graphql",
    "yaml",
    "yml"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "eslint '**/*.{ts,js}' && tsc --noEmit",
    "format": "effective-prettier '**/*.{ts,js,json,md,yml}'",
    "vscode:package": "vsce package",
    "vscode:prepublish": "preppy --deep --quiet",
    "watch": "preppy --watch --deep",
    "build": "preppy --deep"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,json,md,yml}": [
      "effective-prettier"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@effective/eslint-config": "^3.7.1",
    "@effective/prettier": "^4.1.0",
    "@types/glob": "^7.1.2",
    "@types/node": "^14",
    "@types/prettier": "^2.0.1",
    "@types/resolve": "1.17.1",
    "@types/vscode": "1.46.0",
    "core-js": "^3.6.5",
    "eslint": "^7.3.1",
    "find-up": "^4.1.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "import-global": "^0.1.0",
    "lint-staged": "^10.2.11",
    "mem": "^6.1.0",
    "preppy": "^10.5.2",
    "resolve": "^1.17.0",
    "typescript": "^3.9.5",
    "vsce": "^1.77.0"
  },
  "dependencies": {},
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%ext.config.title%",
      "properties": {}
    },
    "jsonValidation": [
      {
        "fileMatch": ".prettierrc",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": ".prettierrc.json",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": "package.json",
        "url": "./package-json-schema.json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          ".prettierrc"
        ]
      },
      {
        "id": "ignore",
        "filenames": [
          ".prettierignore"
        ]
      },
      {
        "id": "graphql",
        "extensions": [
          ".graphql"
        ]
      },
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ]
      }
    ]
  }
}
