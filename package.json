{
  "name": "effective-prettier-vscode",
  "displayName": "Enhanced Prettier - Code formatter",
  "description": "Code formatter using prettier",
  "version": "1.0.0",
  "publisher": "sebastian-software",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "galleryBanner": {
    "color": "#ffe04b",
    "theme": "light"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=sebastian-software.effective-prettier-vscode",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-prettier-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/sebastian-software/effective-prettier-vscode/issues"
  },
  "engines": {
    "vscode": "^1.34.0"
  },
  "keywords": [
    "multi-root ready",
    "prettier",
    "formatter",
    "javascript",
    "js",
    "jsx",
    "flow",
    "typescript",
    "ts",
    "json",
    "css",
    "less",
    "scss",
    "styled-components",
    "styled-jsx",
    "markdown",
    "md",
    "commonmark",
    "mdx",
    "php",
    "pug",
    "ruby",
    "swift",
    "html",
    "vue",
    "angular",
    "graphql",
    "yaml",
    "yml"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "format": "prettier --write '**/*.{ts,json,md,yml,js}' && prettier-eslint '**/*.{ts,js}'",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish",
    "vscode:prepublish": "preppy",
    "watch": "preppy --watch",
    "build": "preppy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "prettier-eslint"
    ],
    "**/*.{ts,json,md,yml,js}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@effective/eslint-config": "^2.1.0",
    "@effective/prettier-eslint": "^1.2.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13",
    "@types/prettier": "^1.19.1",
    "@types/resolve": "1.14.0",
    "@types/semver": "7.1.0",
    "@types/sinon": "^7.5.2",
    "@types/vscode": "1.43.0",
    "glob": "^7.1.6",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "mocha": "^7.1.1",
    "mocha-junit-reporter": "^1.23.3",
    "preppy": "^9.3.1",
    "sinon": "^9.0.1",
    "typescript": "^3.8.3",
    "vsce": "^1.74.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "ignore": "^5.1.4",
    "mem": "^6.0.1",
    "prettier": "^2.0.2",
    "read-pkg-up": "^7.0.1",
    "resolve": "^1.15.1",
    "semver": "7.1.3"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%ext.config.title%",
      "properties": {
        "prettier.disableLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "markdownDescription": "%ext.config.disableLanguages%",
          "scope": "window"
        },
        "prettier.requireConfig": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "%ext.config.requireConfig%",
          "scope": "resource"
        },
        "prettier.useEditorConfig": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "%ext.config.useEditorConfig%",
          "scope": "resource"
        },
        "prettier.prettierPath": {
          "type": "string",
          "markdownDescription": "%ext.config.prettierPath%",
          "scope": "resource"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": ".prettierrc",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": ".prettierrc.json",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": "package.json",
        "url": "./package-json-schema.json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          ".prettierrc"
        ]
      },
      {
        "id": "ignore",
        "filenames": [
          ".prettierignore"
        ]
      },
      {
        "id": "graphql",
        "extensions": [
          ".graphql"
        ]
      },
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ]
      }
    ]
  }
}
