{
  "name": "effective-prettier-vscode",
  "displayName": "✪ Effective Prettier for VSCode - Code Formatter",
  "description": "✪ Effective Prettier for VSCode - Code Formatter",
  "version": "1.1.0",
  "publisher": "sebastian-software",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "https://www.sebastian-software.de"
  },
  "galleryBanner": {
    "color": "#00596C",
    "theme": "dark"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=sebastian-software.effective-prettier-vscode",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-prettier-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/sebastian-software/effective-prettier-vscode/issues"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "keywords": [
    "multi-root ready",
    "prettier",
    "formatter",
    "javascript",
    "js",
    "jsx",
    "flow",
    "typescript",
    "ts",
    "json",
    "css",
    "less",
    "scss",
    "styled-components",
    "styled-jsx",
    "markdown",
    "md",
    "commonmark",
    "mdx",
    "php",
    "pug",
    "ruby",
    "swift",
    "html",
    "vue",
    "angular",
    "graphql",
    "yaml",
    "yml"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "icon": "icon.png",
  "main": "./dist/index.js",
  "scripts": {
    "lint": "tsc --noEmit",
    "format": "prettier --write '**/*.{json,md,yml}' && effective-prettier '**/*.{ts,js}'",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish",
    "vscode:prepublish": "preppy --deep --quiet",
    "watch": "preppy --watch --deep",
    "build": "preppy --deep"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "effective-prettier"
    ],
    "**/*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@effective/eslint-config": "^2.4.1",
    "@effective/prettier": "^2.1.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^13",
    "@types/prettier": "^2.0.0",
    "@types/resolve": "1.14.0",
    "@types/vscode": "1.44.0",
    "core-js": "^3.6.5",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mem": "^6.1.0",
    "preppy": "^10.1.0",
    "resolve": "^1.17.0",
    "typescript": "^3.8.3",
    "vsce": "^1.75.0",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "prettier": "^2.0.5",
    "read-pkg-up": "^7.0.1"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "%ext.config.title%",
      "properties": {}
    },
    "jsonValidation": [
      {
        "fileMatch": ".prettierrc",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": ".prettierrc.json",
        "url": "http://json.schemastore.org/prettierrc"
      },
      {
        "fileMatch": "package.json",
        "url": "./package-json-schema.json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "filenames": [
          ".prettierrc"
        ]
      },
      {
        "id": "ignore",
        "filenames": [
          ".prettierignore"
        ]
      },
      {
        "id": "graphql",
        "extensions": [
          ".graphql"
        ]
      },
      {
        "id": "vue",
        "extensions": [
          ".vue"
        ]
      }
    ]
  }
}
